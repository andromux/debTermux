#!/data/data/com.termux/files/usr/bin/bash

# =============================================================================
#  ๐ ANDROMUX GIT MANAGER - ACTUALIZADOR PROFESIONAL DE REPOSITORIOS
# =============================================================================

# Configuraciรณn de colores profesionales
readonly RED='\033[0;31m'
readonly GREEN='\033[0;32m'
readonly YELLOW='\033[1;33m'
readonly BLUE='\033[0;34m'
readonly PURPLE='\033[0;35m'
readonly CYAN='\033[0;36m'
readonly WHITE='\033[1;37m'
readonly GRAY='\033[0;90m'
readonly BOLD='\033[1m'
readonly UNDERLINE='\033[4m'
readonly RESET='\033[0m'

# Caracteres especiales para mejor presentaciรณn
readonly CHECK_MARK="โ"
readonly CROSS_MARK="โ"
readonly ARROW_RIGHT="โ"
readonly GEAR="โ"
readonly FOLDER="๐"
readonly GIT_ICON="๐"
readonly SUCCESS_ICON="๐"
readonly WARNING_ICON="โ"
readonly CONFIG_ICON="๐ง"
readonly SSH_ICON="๐"

# Configuraciรณn
readonly CONFIG_FILE="$HOME/.config.andromux.json"
readonly VERSION="2.0.0"
readonly SCRIPT_NAME="Andromux Git Manager"

# Variables globales
REPO_DIR=""
TOTAL_REPOS=0
UPDATED_REPOS=0
ERROR_REPOS=0
UP_TO_DATE_REPOS=0
FIRST_RUN=false

# Funciรณn para crear configuraciรณn por defecto
create_default_config() {
    local default_repo_dir="$HOME/git-repos"
    
    # Crear directorio .config si no existe
    mkdir -p "$(dirname "$CONFIG_FILE")"
    
    # Crear configuraciรณn JSON
    cat > "$CONFIG_FILE" << EOF
{
  "version": "$VERSION",
  "created": "$(date -Iseconds)",
  "last_updated": "$(date -Iseconds)",
  "config": {
    "repo_directory": "$default_repo_dir",
    "auto_create_dir": true,
    "ssh_configured": false,
    "show_detailed_output": true,
    "progress_bar_enabled": true
  },
  "stats": {
    "total_runs": 0,
    "last_run": null,
    "repositories_managed": 0
  }
}
EOF
    
    echo "$default_repo_dir"
}

# Funciรณn para leer configuraciรณn
read_config() {
    if [ ! -f "$CONFIG_FILE" ]; then
        FIRST_RUN=true
        REPO_DIR=$(create_default_config)
        return 0
    fi
    
    # Leer directorio de repositorios desde JSON (mรฉtodo compatible)
    REPO_DIR=$(grep -o '"repo_directory"[[:space:]]*:[[:space:]]*"[^"]*"' "$CONFIG_FILE" | sed 's/.*"repo_directory"[[:space:]]*:[[:space:]]*"\([^"]*\)".*/\1/')
    
    if [ -z "$REPO_DIR" ]; then
        echo -e "${RED}${CROSS_MARK} Error:${RESET} ${RED}No se pudo leer la configuraciรณn del archivo${RESET}"
        echo -e "${YELLOW}${ARROW_RIGHT} Archivo:${RESET} ${WHITE}$CONFIG_FILE${RESET}"
        exit 1
    fi
}

# Funciรณn para actualizar estadรญsticas en la configuraciรณn
update_config_stats() {
    local temp_file=$(mktemp)
    local current_date=$(date -Iseconds)
    
    # Actualizar estadรญsticas usando sed (compatible)
    sed "s/\"last_updated\": \"[^\"]*\"/\"last_updated\": \"$current_date\"/" "$CONFIG_FILE" > "$temp_file"
    sed -i "s/\"last_run\": [^,]*/\"last_run\": \"$current_date\"/" "$temp_file"
    sed -i "s/\"repositories_managed\": [^}]*/\"repositories_managed\": $TOTAL_REPOS/" "$temp_file"
    
    # Incrementar contador de ejecuciones
    local runs=$(grep -o '"total_runs"[[:space:]]*:[[:space:]]*[0-9]*' "$temp_file" | grep -o '[0-9]*$')
    local new_runs=$((runs + 1))
    sed -i "s/\"total_runs\": [^,]*/\"total_runs\": $new_runs/" "$temp_file"
    
    mv "$temp_file" "$CONFIG_FILE"
}

# Funciรณn para mostrar configuraciรณn inicial
show_first_run_setup() {
    clear
    echo -e "${CYAN}โโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโ${RESET}"
    echo -e "${CYAN}โ${WHITE}${BOLD}                   ๐ BIENVENIDO A ANDROMUX GIT MANAGER                     ${RESET}${CYAN}โ${RESET}"
    echo -e "${CYAN}โโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโฃ${RESET}"
    echo -e "${CYAN}โ${RESET} ${WHITE}ยกPrimera ejecuciรณn detectada! Configurando tu entorno...${RESET}"
    echo -e "${CYAN}โโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโ${RESET}"
    echo
    
    echo -e "${YELLOW}${CONFIG_ICON} ${BOLD}CONFIGURACIรN INICIAL${RESET}"
    echo -e "${GRAY}โโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโ${RESET}"
    echo -e "${WHITE}๐ Directorio configurado:${RESET} ${CYAN}$REPO_DIR${RESET}"
    echo -e "${WHITE}๐ Archivo de configuraciรณn:${RESET} ${CYAN}$CONFIG_FILE${RESET}"
